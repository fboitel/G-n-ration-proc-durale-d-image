{
	"scripts": {
		"dev-web": "parcel serve --dist-dir build src/web",
		"dev-node": "parcel watch --no-hmr src/node",
		"build-web": "if [ -d build/web ]; then rm -rf build/web; fi && parcel build src/web",
		"build-node": "if [ -d build/node ]; then rm -rf build/node; fi && parcel build src/node",
		"run-node": "node --enable-source-maps build/node/main.js json_examples/perlin.json"
	},
	"dependencies": {
		"canvas": "^2.7.0"
	},
	"devDependencies": {
		"@babel/core": "^7.13.15",
		"@types/node": "^14.14.37",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"jest": "^26.6.3",
		"parcel": "2.0.0-nightly.636",
		"postcss": "^8.2.9",
		"typescript": "^4.2.4"
	}
}
